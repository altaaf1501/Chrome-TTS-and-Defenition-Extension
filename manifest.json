{
  "manifest_version": 3,
  "name": "Arjen translator big brain",
  "version": "1.0",

  "permissions": [
    "tabs",
    "https://*/*",
    "http://*/*"
  ],
  "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon64.png",
      "128": "images/icon128.png"
    },
    "default_title": "Translator",
    "default_popup": "popup.html"    
  },
  "description": "Yo",
  "icons": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon64.png",
      "128": "images/icon128.png"
  },

  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"]
    }
  ]
  

  


}